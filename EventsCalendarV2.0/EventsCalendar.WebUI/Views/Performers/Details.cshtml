@using Microsoft.Ajax.Utilities
@model EventsCalendar.Core.ViewModels.PerformerViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="jumbotron">
    <div class="display-4">Performer Details</div>

    <div class="lead">
        @Html.DisplayFor(model => model.Performer.Name)
    </div>

    <hr class="my-3" />

    <div class="row">
        <div class="col-md-6" id="performer-img">
            <img src="@Model.Performer.ImageUrl" id="details-image" alt="@Model.Performer.Name"/>
        </div>

        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Performer.PerformerType)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Performer.PerformerType)
                </dd>

                @if (Model.Performer.PerformerType == EventsCalendar.Core.Models.PerformerType.Musician)
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.Performer.Genre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Performer.Genre)
                    </dd>
                }
                else
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.Performer.Topic)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Performer.Topic)
                    </dd>
                }

                @if (!Model.Performer.TourName.IsNullOrWhiteSpace())
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.Performer.TourName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Performer.TourName)
                    </dd>
                }

                @if (!Model.Performer.Description.IsNullOrWhiteSpace())
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.Performer.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Performer.Description)
                    </dd>
                }
            </dl>
        </div>
        <div class="clearfix"></div>
    </div>
    
    <div class="pt-lg-4">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Performer.Id }, new { @class = "btn btn-primary"})
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary"})
    </div>

</div>
