@using Microsoft.Ajax.Utilities
@model EventsCalendar.Services.Contracts.IPerformanceViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">

    <div class="display-4">Performance Details</div>

    <hr class="my-3" />

    @if (!Model.Performance.Description.IsNullOrWhiteSpace())
    {
        <div class="row">
            <dl class="dl-horizontal col-lg-4">
                <dt>
                    @Html.DisplayNameFor(model => model.EventDate)
                </dt>

                <dd>
                    @Convert.ToDateTime(Model.Performance.EventDateTime).ToString("MMMM d, yyyy")
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EventTime)
                </dt>

                <dd>
                    @Convert.ToDateTime(Model.Performance.EventDateTime).ToString("h:mm tt")
                </dd>
            </dl>

            <dl class="col-lg-4">

                <dt>
                    @Html.DisplayNameFor(model => model.BudgetPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BudgetPrice)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ModeratePrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ModeratePrice)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PremierPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PremierPrice)
                </dd>
            </dl>

            <dl class="col-lg-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Performance.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Performance.Description)
                </dd>
            </dl>

            <div class="clearfix"></div>
        </div>
    }
    else /* NO DESCRIPTION */
    {
        <div class="row">
            <div class="col-lg-6">
                <h3>
                    @Convert.ToDateTime(Model.Performance.EventDateTime).ToString("MMMM d, yyyy") at
                    @Convert.ToDateTime(Model.Performance.EventDateTime).ToString("h:mm tt")
                </h3>
            </div>

            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-4">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.SeatsRemaining.Budget)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.SeatsRemaining.Budget)
                            </dd>
                        </dl>
                    </div>

                    <div class="col-lg-4">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.SeatsRemaining.Moderate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.SeatsRemaining.Moderate)
                            </dd>
                        </dl>
                    </div>

                    <div class="col-lg-4">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.SeatsRemaining.Premier)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.SeatsRemaining.Premier)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="offset-lg-6 col-lg-6">
                <div class="row">
                    <div class="col-lg-4">
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.BudgetPrice)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.BudgetPrice)
                            </dd>

                        </dl>
                    </div>
                    <div class="col-lg-4">
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.ModeratePrice)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ModeratePrice)
                            </dd>

                        </dl>
                    </div>
                    <div class="col-lg-4">
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.PremierPrice)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.PremierPrice)
                            </dd>

                        </dl>
                    </div>
                </div>
            </div>
        </div>
    }

    @* Begin Performer Section *@
    <div class="row mt-lg-4">
        <div class="col-lg-6">
            <img src="@Model.Performance.PerformerDto.ImageUrl" id="performer-img" />
        </div>
        <dl class="col-lg-6 dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Performance.PerformerDto.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Performance.PerformerDto.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Performance.PerformerDto.PerformerType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Performance.PerformerDto.PerformerType)
            </dd>

            @if (Model.Performance.PerformerDto.PerformerType == EventsCalendar.Core.Models.PerformerType.Musician)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Performance.PerformerDto.Genre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Performance.PerformerDto.Genre)
                </dd>
            }
            else
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Performance.PerformerDto.Topic)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Performance.PerformerDto.Topic)
                </dd>
            }

            @if (!Model.Performance.PerformerDto.TourName.IsNullOrWhiteSpace())
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Performance.PerformerDto.TourName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Performance.PerformerDto.TourName)
                </dd>
            }

            @if (!Model.Performance.PerformerDto.Description.IsNullOrWhiteSpace())
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Performance.PerformerDto.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Performance.PerformerDto.Description)
                </dd>
            }
        </dl>
        <div class="clearfix"></div>
    </div>


    @* Begin Venue Section *@
    <div class="row">
        <div class="col-lg-6">
            <img src="@Model.Performance.VenueDto.ImageUrl" id="venue-img" alt="@Model.Performance.VenueDto.Name"/>
        </div>
        <div class="col-lg-6" id="venue-info">
            <div class="row">
                <dl class="dl-horizontal col">

                    <dt>
                        @Html.DisplayNameFor(model => model.Performance.VenueDto.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Performance.VenueDto.Name)
                    </dd>

                </dl>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <dl class="dl-horizontal col">

                    <dt>
                        @Html.DisplayNameFor(model => model.Performance.VenueDto.AddressDto.StreetAddress)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Performance.VenueDto.AddressDto.StreetAddress, new { @id = "street-address" })
                    </dd>

                </dl>
            </div>
            <div class="row">
                <div class="col">
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Performance.VenueDto.AddressDto.City)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Performance.VenueDto.AddressDto.City, new { @id = "city" })
                        </dd>

                    </dl>
                </div>
                <div class="col">
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Performance.VenueDto.AddressDto.State)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Performance.VenueDto.AddressDto.State, new { @id = "state" })
                        </dd>

                    </dl>
                </div>
                <div class="col">
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Performance.VenueDto.AddressDto.ZipCode)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Performance.VenueDto.AddressDto.ZipCode)
                        </dd>

                    </dl>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <iframe performerId="map" allowfullscreen></iframe>
        </div>
    </div>

    <div class="pt-lg-4">
        @* PURCHASE TICKETS WILL CHANGE WHEN PURCHASE FUNCTIONS ADDED *@
        @Html.ActionLink("Purchase Tickets", "Create", "Tickets", new { id = Model.Performance.Id }, new { @class = "btn btn-success" })
        @Html.ActionLink("Edit", "Edit", new { id = Model.Performance.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            var streetAddress = '@(Model.Performance.VenueDto.AddressDto.StreetAddress)'.trim();
            var city = '@(Model.Performance.VenueDto.AddressDto.City)'.trim();
            var state = '@(Model.Performance.VenueDto.AddressDto.State)'.trim();
            var address = `${streetAddress},+${city},+${state}`;
            address = address.replace(/\s/g, '+');
            var src = `https://www.google.com/maps/embed/v1/place?key=AIzaSyBEvGqWLKAT14Nk_NVCtqKE-AuchnT1OU8&q=${address}&zoom=11`;
            $("#map").attr('src', src);
        });
    </script>
}